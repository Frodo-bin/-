<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activity.SwitchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <top.androidman.SuperButton
            android:id="@+id/server"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            app:color_direction="RIGHT_LEFT"
            app:color_end="@color/color_14c7de"
            app:color_start="@color/red"
            app:corner="20dp"
            app:text="队长"
            app:textColor="@color/white"
            app:textSize="22sp" />
        <top.androidman.SuperButton
            android:id="@+id/client"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            app:color_direction="RIGHT_LEFT"
            app:color_end="@color/green"
            app:color_start="@color/color_14c7de"
            app:corner="20dp"
            app:text="队员"
            app:textColor="@color/white"
            app:textSize="22sp" />
        <!--<Button
            android:id="@+id/client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="队员"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />-->


    </LinearLayout>
</android.support.constraint.ConstraintLayout>